<%- include('partials/header') %>

<div class="jumbotron text-center">
  <div class="container">
    <i class="fas fa-key fa-6x"></i>
    <h1 class="display-3">You've Discovered My Secret!</h1>

    <% secrets.forEach(secret => { %>
      <p class="secret-text"><%= secret %></p>
    <% }) %>

    
    <hr>

    <div class="container">
      <div class="row">
        <div class="col-6">
          <form action="/logout" method="POST">
            <button class="btn btn-light btn-lg" type="submit">Log Out</button>
          </form>
        </div>
        <div class="col-6">
          <form action="/submit" method="GET">
            <button class="btn btn-dark btn-lg" type="submit">Submit a Secret</button>
          </form>
        </div>
      </div>
    </div>
    
  </div>
</div>

<%- include('partials/footer') %>
